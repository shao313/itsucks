<div class="page-header">
  <h1>
    Complaints
    <a href="/complaints/new" class="btn btn-lg btn-success">New Complaint</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Company</th>
        <th>User</th>
        <th>Body</th>
        <th>Caption</th>
        <th>Actions</th>
      </tr>

      <% @complaints.each do |complaint| %>
      <tr>
        <td><%= complaint.company_id %></td>
        <td><%= complaint.user_id %></td>
        <td><%= complaint.body %></td>
        <td><%= complaint.caption %></td>
        <td>
          <a href="/complaints/<%= complaint.id %>" class="btn btn-primary">Show</a>
          <a href="/complaints/<%= complaint.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_complaint/<%= complaint.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
